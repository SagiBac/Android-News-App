<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="#2F4F4F">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/Resturant_ImageContainer">

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/resturant_progressbar"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/Article_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_gravity="start|center"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/Resturant_ImageContainer">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/Resturant_ImageContainer"
                android:layout_centerHorizontal="true"
                android:layout_weight="0.1"
                android:orientation="vertical"
                android:textDirection="rtl"
                android:id="@+id/relativeLayout">


                <TextView
                    android:id="@+id/Article_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:text="Title"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="19dp"
                    tools:layout_editor_absoluteY="146dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_conversion_absoluteWidth="324dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/Article_description"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical"
                    android:text="Description"
                    android:textColor="#fff"
                    android:textSize="12sp"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_editor_absoluteY="165dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_conversion_absoluteWidth="324dp"
                    android:layout_below="@id/Article_title"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
            <TextView
            android:id="@+id/Article_SeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="Go to article"
            android:textColor="#F9E79F"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="1dp"
            tools:layout_editor_absoluteY="541dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_conversion_absoluteWidth="89dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>